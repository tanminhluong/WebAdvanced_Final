<%- include ("shares/header") %>
<link rel="stylesheet" href="/css/admin.css">
    <section>
        <div class="page-content">
            <div class="page-content">
                <% if(user ) { %>
                <div class="bar-add">
                    <i class="fas fa-home"><a href="#" id="indexPage">   <%= user.name %></a> <i class="fas fa-chevron-right"></i>
                    <button data-owner="<%= user.role %>" id="btn-new-notification"
                        class="btn btn-create-faculty">Tạo thông báo mới</button>
                    </i>
                </div>
                <% } %>

                <div class="containerABC">
                    <div class="grid">
                        <% if(notifications) { %>
                            <% notifications.forEach(noti=> { %>
                        <div class="row">
                            <div class="notification">
                                <div class="notification__header">
                                    <div class="notification__title" >
                                        <div style="display: inline-block;" >
                                            <span class="notification__title--text text-Big">
                                             <%= noti.title %>                                            
                                            </span>
                                        </div>
                                        <br>
                                        <span>
                                            <%= noti.content %>
                                        </span>
                                    </div>
                             
                                    
                                   

                                    <div class="notification__action">
                                        <i class="fas fa-ellipsis-h action-icon"></i>
                                        <ul class="action-menu">
                                            <li class="action-menu__item">
                                                <button data-owner="<%= noti.owner %>"
                                                    data-title="<%= noti.title %>" data-id="<%= noti._id %>"
                                                    data-categories="<%= noti.categories %>"
                                                    data-content="<%= noti.content %>"
                                                    data-brief-text="<%= noti.briefText %>"
                                                    class="btn-action btn-update" type="button">Chỉnh sửa

                                                </button>
                                            </li>
                                            <li class="action-menu__item">
                                                <button data-id="<%= noti._id %>" class="btn-action btn-delete"
                                                    type="button">Xóa</button>
                                            </li>
                                        </ul>

                                    </div>
                                
                                </div>

                                 <div class="notification__footer">
                                            <div class="footer__detail">
                                                <a href="/notifications/detail/<%= noti._id %> " class="footer__detail--link">Chi tiết thông báo</a>

                                            </div>
                                            <div class="footer__info">
                                                <div class="footer__info--owner">
                                                    <%= noti.owner %>
                                                </div>
                                                <div class="footer__info--date">Ngày đăng: <%= new
                                                        Date(noti.createdAt).toLocaleDateString() %>
                                                        <%= new Date(noti.createdAt).toLocaleTimeString() %>
                                                </div>
                                            </div>
                                        </div>
                            </div>
                        </div>
                        <% }) %>
                                    <% } else { %>
                                        <div class="empty-alert">Chưa có thông báo nào</div>
                                        <% } %>
                    
                       
                    </div>
                </div>

                

            </div>

        </div>
        </div>
    </section>

      <!-- Create new notification -->
    <div id="modalNewNotif" class="modal" >
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="containerForm">
                <form method="post" onsubmit="return doCreateNoti(this)">
                <div class="row">
                  <div class="col-25">
                    <label for="title">Tiêu đề</label>
                </div>
                  <div class="col-75">
                    <input type="text" name="title" placeholder="Nhập tiêu đề...">
                </div>
                </div>
                <div class="row">
                  <div class="col-25">
                    <label for="categories">Chuyên mục</label>
                </div>
                  <div class="col-75">
                    <input type="text" name="categories" placeholder="Nhập tên chuyên mục...">
                </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="briefText">Tóm tắt</label>
                    </div>
                    <div class="col-75">
                        <input type="text" name="briefText" placeholder="Tóm tắt nội dung...">
                    </div>
                  </div>

                <div class="row">
                  <div class="col-25">
                    <label for="content">Nội dung</label>
                </div>
                  <div class="col-75">
                    <textarea name="content" id="" cols="30" rows="10"></textarea>
                  </div>
                </div>
                <div class="row">
                  <input type="submit" value="Submit">
                </div>
                </form>
             </div>
        </div>

    </div>

    

    <!-- Confirm delete -->
    <div class="modal fade" id="confirm-delete-dialog" tabindex="-1" role="dialog" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Xóa bài viết</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Bạn có chắc rằng muốn xóa <strong id="delete-username">Bài viết này</strong>?
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button data-id="???" data-name="???" id="btn-delete-confirmed" type="button"
                        class="btn btn-danger">Xóa</button>
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Đóng</button>
                </div>

            </div>
        </div>
    </div>
    <!-- End Confirm delete -->

    <form id='delete-noti-form' method="POST" name="delete-course-form"></form>


    <!-- modal update -->
    <div id="modal-update" class="modal" >
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal__title">
                <h2>Chỉnh sửa thông báo</h2>
            </div>
            <div class="containerForm">
                <form id="noti-update-form" method="POST">
                <div class="row">
                  <div class="col-25">
                    <label for="title">Tiêu đề</label>
                </div>
                  <div class="col-75">
                    <input id="title" type="text" name="title" placeholder="Nhập tiêu đề...">
                </div>
                </div>
                <div class="row">
                  <div class="col-25">
                    <label id="categories" for="categories">Chuyên mục</label>
                </div>
                  <div class="col-75">
                    <input type="text" name="categories" placeholder="Nhập tên chuyên mục...">
                </div>
                </div>
                <div class="row">
                    <div class="col-25">
                        <label for="briefText">Tóm tắt</label>
                    </div>
                    <div class="col-75">
                        <input id="briefText" type="text" name="briefText" placeholder="Tóm tắt nội dung...">
                    </div>
                  </div>

                <div class="row">
                  <div class="col-25">
                    <label for="content">Nội dung</label>
                </div>
                  <div class="col-75">
                    <textarea id="content" name="content" id="" cols="30" rows="10"></textarea>
                  </div>
                </div>
                <div class="row">
                    <button data-id="???" id="btn-confirm-update" type="submit" class="btn btn-confirm-create">Cập
                        nhật</button>
                        <a class="btn btn-cancel" data-dismiss="modal">Hủy</a>
                </div>
                </form>
             </div>
        </div>

    </div>
    <script src="/js/myjs/facultyejs.js">
    </script>
    <%- include ("shares/footer") %>